@model KindHeartCharity.Models.Domain.Post

@{
    ViewData["Title"] = "GetPostById";
}

<section class="news-detail-header-section text-center">
    <div class="section-overlay"></div>

    <div class="container">
        <div class="row">

            <div class="col-lg-12 col-12">
                <h1 class="text-white">News Detail</h1>
            </div>

        </div>
    </div>
</section>


<section class="section-padding">
    <div class="container">
        <div class="row">

            <div class="d-flex justify-content-between mt-2">

                <div class="news-block-date">
                    <p>
                        <i class="bi-calendar4 custom-icon me-1"></i>
                        @Html.DisplayFor(model => model.PostDate)
                    </p>
                </div>

                <div class="news-block-author">
                    <p>
                        <i class="bi-person custom-icon me-1"></i>
                        By Admin
                    </p>
                </div>


            </div>

  

            <img src="/Uploads/@Html.DisplayFor(model => model.PostImageURL)"
                 class="custom-block-image img-fluid" alt="">

            <div class="custom-block">
                <div class="custom-block-body">
                    <h5 class="mb-3 text-truncation">

                        @Html.DisplayFor(model => model.Content)

                    </h5>

                    <p class="text-truncation">
                        @Html.DisplayFor(model => model.Description)
                    </p>

                   
                </div>


            </div>

        </div>
    </div>
</section>

<div class="col-lg-4 col-md-6 col-12">
    <div class="custom-block-wrap">


      


     
    </div>
</div>
<a asp-action="Index"><i class="bi bi-arrow-left"></i> Back to Home</a>

