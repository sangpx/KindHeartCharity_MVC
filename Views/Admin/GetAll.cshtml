@model IEnumerable<KindHeartCharity.Models.Domain.Post>


@{
    ViewData["Title"] = "GetAll";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />


    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <link href="/css/bootstrap-icons.css" rel="stylesheet">

    <link href="/css/templatemo-kind-heart-charity.css" rel="stylesheet">

    <link href="/css/Dashboard/dashboard.css" rel="stylesheet">
</head>
<body>


<header>

    <!-- Sidebar -->
    <nav id="sidebarMenu" class="collapse d-lg-block sidebar collapse bg-dark">
        <div class="position-sticky">
            <div class="list-group list-group-flush mx-3">

                <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                        <a 
                            class="dropdown-toggle py-2 list-group-item list-group-item-action ripple"
                            id="navbarLightDropdownMenuLink"  
                            data-bs-toggle="dropdown"
                            aria-expanded="false"
                        >
                            <i class="bi bi-speedometer2"></i><span>Dashboard</span>
                        </a>

                                <ul class="dropdown-menu dropdow n-menu-light" aria-labelledby="navbarLightDropdownMenuLink">
                                    <li>
                                        <a asp-action="GetAll" asp-controller="Admin"
                                           class="list-group-item list-group-item-action ripple"
                                           aria-current="true">
                                            <i class="bi bi-file-post"></i> <span class="ml-2">Posts</span>
                                        </a>
                                    </li>

                                    <li>
                                        <a href="#" class="list-group-item list-group-item-action py-2 ripple">
                                            <i class="bi bi-people"></i> <span class="ml-2">User</span>
                                        </a>
                                    </li>
                                </ul>
                        </li>
                </ul>

                <a asp-action="Index" asp-controller="Home" class="list-group-item list-group-item-action py-2 ripple">
                    <i class="bi bi-house"></i> <span class="ml-2">Back to Home</span>
                </a>

            </div>
        </div>
    </nav>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid d-flex justify-content-end">
            <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
        </div>

    </nav>


</header>


<!--Main layout-->
<main>
    <div class="container pt-4">
        <div class="container p-3">
            <div class="row pt-4">
                <div class="col-6">
                    <h2 class="text-black-50">Post List</h2>
                </div>

                <div class="col-6 text-end">
                    <a asp-controller="Admin" asp-action="Create" class="btn btn-success"> <i class="bi bi-plus-circle"></i> &nbsp; Create New Post</a>
                </div>
            </div>


            <div id="result" class="border" style="height: 550px; overflow:scroll">
                
            </div>
        </div>
    </div>

    

    <nav aria-label="Page navigation example">
        <ul class="pagination d-flex justify-content-center">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
    
</main>

    <script src="/js/jquery.min.js"></script>
    <script src="/wwwroot/js/bootstrap.min.js"></script>
    <script src="/js/AdminManagement/index.js"></script>
</body>
</html>
